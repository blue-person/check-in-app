<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_cont"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/check1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Principal.Fragmentos.HomeFragment"
    android:orientation="vertical">

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/check1.2">

    </View>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        android:layout_width="300dp"
        android:layout_height="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_20sdp"
        android:elevation="10dp"

        android:backgroundTint="@color/check2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickname"
                android:textSize="@dimen/_20ssp"

                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/en_busca_de_perezosos"
                android:textSize="@dimen/_12ssp"

                android:layout_gravity="center"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="logout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_exit"
            android:tint="@color/check1.2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar SesiÃ³n"
            android:textSize="20sp"
            />


    </LinearLayout>






</FrameLayout>